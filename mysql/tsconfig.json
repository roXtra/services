{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "jsx" : "react",
    "allowJs": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
   "include": [
    "./**/*"
  ],
  "exclude": [
    "./dist/**/*",
    "./node_modules"
  ]
}