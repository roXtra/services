{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ES2022", "dom"],
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["./dist/**/*", "./disttests/**/*", "./node_modules"]
}
