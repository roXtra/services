{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./tmp/",
    "jsx": "react-jsx",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["./**/*"],
  "exclude": ["./dist/**/*", "./node_modules"]
}
